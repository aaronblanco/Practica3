<?xml version="1.0" encoding="utf-8"?>
<!-- Archivo: res/values/themes.xml -->

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base Material 3 con soporte DayNight y sin ActionBar -->
    <style name="Theme.Practica3" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores clave (usando esquema M3 por defecto o dynamic color en Compose) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorSecondary">@color/teal_700</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Estilo por defecto para MaterialButton -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <!-- Estilo por defecto para TextInputLayout -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.FilledBox</item>
    </style>
</resources>
